{
  "info": {
    "name": "E-commerce API Collection",
    "description": "Complete API collection for MERN E-commerce application",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "userId",
      "value": "",
      "type": "string"
    },
    {
      "key": "itemId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "User Registration",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/signup",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "signup"]
            },
            "description": "Register a new user account"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('token', response.token);",
                  "    pm.collectionVariables.set('userId', response.user.id);",
                  "    console.log('Token saved:', response.token);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "User Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            },
            "description": "Login with existing user credentials"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('token', response.token);",
                  "    pm.collectionVariables.set('userId', response.user.id);",
                  "    console.log('Token saved:', response.token);",
                  "}"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Items",
      "item": [
        {
          "name": "Get All Items",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/items",
              "host": ["{{baseUrl}}"],
              "path": ["items"]
            },
            "description": "Get all items with optional filters"
          }
        },
        {
          "name": "Get All Items with Filters",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/items?search=iPhone&category=electronics&minPrice=500&maxPrice=1500&page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["items"],
              "query": [
                {
                  "key": "search",
                  "value": "iPhone"
                },
                {
                  "key": "category",
                  "value": "electronics"
                },
                {
                  "key": "minPrice",
                  "value": "500"
                },
                {
                  "key": "maxPrice",
                  "value": "1500"
                },
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            },
            "description": "Get items with search and filter parameters"
          }
        },
        {
          "name": "Get Single Item",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/items/{{itemId}}",
              "host": ["{{baseUrl}}"],
              "path": ["items", "{{itemId}}"]
            },
            "description": "Get a single item by ID"
          }
        },
        {
          "name": "Create Item",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test Product\",\n  \"description\": \"This is a test product description\",\n  \"price\": 99.99,\n  \"originalPrice\": 129.99,\n  \"category\": \"electronics\",\n  \"brand\": \"Test Brand\",\n  \"images\": [\"https://images.unsplash.com/photo-1505740420928-5e560c06d30e?w=500\"],\n  \"stock\": 50,\n  \"sku\": \"TEST-001\",\n  \"weight\": 200,\n  \"dimensions\": {\n    \"length\": 10,\n    \"width\": 8,\n    \"height\": 5\n  },\n  \"colors\": [\"Black\", \"White\"],\n  \"sizes\": [\"Small\", \"Medium\", \"Large\"],\n  \"tags\": [\"test\", \"electronics\", \"sample\"],\n  \"isFeatured\": false,\n  \"isOnSale\": true,\n  \"saleStartDate\": \"2024-01-01T00:00:00.000Z\",\n  \"saleEndDate\": \"2024-12-31T23:59:59.000Z\",\n  \"shippingInfo\": {\n    \"freeShipping\": true,\n    \"shippingCost\": 0,\n    \"estimatedDelivery\": \"2-3 business days\"\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/items",
              "host": ["{{baseUrl}}"],
              "path": ["items"]
            },
            "description": "Create a new item (requires authentication)"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('itemId', response._id);",
                  "    console.log('Item ID saved:', response._id);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Update Item",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Test Product\",\n  \"price\": 89.99,\n  \"stock\": 75\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/items/{{itemId}}",
              "host": ["{{baseUrl}}"],
              "path": ["items", "{{itemId}}"]
            },
            "description": "Update an existing item (requires authentication)"
          }
        },
        {
          "name": "Delete Item",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/items/{{itemId}}",
              "host": ["{{baseUrl}}"],
              "path": ["items", "{{itemId}}"]
            },
            "description": "Delete an item (requires authentication)"
          }
        }
      ]
    },
    {
      "name": "Cart",
      "item": [
        {
          "name": "Get Cart",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/cart",
              "host": ["{{baseUrl}}"],
              "path": ["cart"]
            },
            "description": "Get current user's cart (requires authentication)"
          }
        },
        {
          "name": "Add Item to Cart",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"itemId\": \"{{itemId}}\",\n  \"qty\": 2\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/cart/add",
              "host": ["{{baseUrl}}"],
              "path": ["cart", "add"]
            },
            "description": "Add item to cart or update quantity (requires authentication)"
          }
        },
        {
          "name": "Update Cart Item",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"itemId\": \"{{itemId}}\",\n  \"qty\": 3\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/cart/update",
              "host": ["{{baseUrl}}"],
              "path": ["cart", "update"]
            },
            "description": "Update cart item quantity or remove if qty is 0 (requires authentication)"
          }
        },
        {
          "name": "Clear Cart",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/cart/clear",
              "host": ["{{baseUrl}}"],
              "path": ["cart", "clear"]
            },
            "description": "Clear all items from cart (requires authentication)"
          }
        }
      ]
    },
    {
      "name": "Test Base API",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:5000",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000"
            },
            "description": "Check if the API server is running"
          }
        }
      ]
    }
  ]
}
